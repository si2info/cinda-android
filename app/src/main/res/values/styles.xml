<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

    </style>

    <!-- Base application theme NoActionBar -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

    </style>

    <!-- Texts Home -->
    <style name="text" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="text.14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text.advice">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text.advice.desc">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text.url">
        <item name="android:textColor">@color/link</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text.issueTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text.issueDescription">
        <item name="android:textColor">@color/defaultColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Texts Campaign -->
    <style name="campaign" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/defaultColor</item>
    </style>

    <style name="campaign.title">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="campaign.userTitle">
        <item name="android:textColor">@color/campaign</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="campaign.userDate">
        <item name="android:textColor">@color/campaign</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">right|end</item>
    </style>

    <style name="campaign.userData">
        <item name="android:textColor">@color/campaign</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Loading -->
    <style name="loading" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Servers -->
    <style name="server" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="dialog" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primary_dark</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Used for the background -->
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Buttons -->
    <style name="suscribirse" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/button_suscribe</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="suscribirse.un">
        <item name="android:background">@drawable/button_unsuscribe</item>
        <item name="android:textColor">@color/unsuscribe</item>
    </style>

    <!-- CollapsingToolbar -->
    <style name="TransparentText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00666666</item>
    </style>

</resources>
