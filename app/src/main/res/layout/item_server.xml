<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view">

    <TextView
        style="@style/server"
        android:text="@string/verdi_server"
        android:id="@+id/server"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/delete"
        android:layout_toStartOf="@+id/delete"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        style="@style/server"
        android:text="@string/verdi_server_desc"
        android:id="@+id/serverDesc"
        android:layout_below="@+id/server"
        android:layout_alignRight="@+id/server"
        android:layout_alignEnd="@+id/server"
        android:layout_alignLeft="@+id/server"
        android:layout_alignStart="@+id/server"
        android:layout_marginTop="4dp" />

    <ImageView
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete_black_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/app_name"
        android:minHeight="32dp"
        android:layout_alignTop="@+id/server"
        android:layout_alignBottom="@+id/serverDesc" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:background="@color/primary"
        android:layout_below="@+id/serverDesc"
        android:layout_marginTop="16dp" />

</RelativeLayout>